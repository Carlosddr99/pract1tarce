                <audio id="audio">
                <p id="grabando">Grabando....</p>
            </div>
        </div>
    </div>
    <div id= "peerConecction" style="margin:10px; display:none">
        <div  style="display:flex; flex-direction:row">
            <button id="botonCancelarPeer" onClick="cerrarSesion()">Cerrar Sesi√≥n</button>
            <audio id="audioPeer" controls>
        </div>
    <div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/mensajes.js"></script>


