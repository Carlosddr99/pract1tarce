extends layout

block content
    link(rel='stylesheet', href='/stylesheets/mensajes.css')
    <div id="mensajes"></div>
    <div id = "form">
        <div style="font-size:20px; color:blue" >Escibe tu nombre:</div>
        <input id="nombre" type="text"/>
        <button id="btnEnviar">Enviar</button>
        <button onClick="conexionPeer()">Llamar</button>
        <br>
        <div id = "formMensaje">
            <input id="mensaje" type="text" placeholder="Escribe tu mensaje"/>
